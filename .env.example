# ==============================================
# CONFIGURAÇÃO DE AMBIENTE - PROJETO CHAT IA
# ==============================================
# IMPORTANTE: Copie este arquivo para .env e preencha os valores reais
# NUNCA commite o arquivo .env no Git!

# ==============================================
# SEGURANÇA
# ==============================================
# Gere uma chave secreta forte: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-me
ALGORITHM=HS256
TOKEN_EXPIRE_MIN=60

# ==============================================
# BACKEND URLS
# ==============================================
# URLs dos backends (ajuste conforme ambiente)
BACKEND_URL=http://localhost:8000
API_SERVER_URL=http://localhost:3000
CHAT_IA_BACKEND_URL=http://localhost:8001
PYTHON_BACKEND_API_URL=http://localhost:8002

# URLs de Produção (Render.com)
# BACKEND_URL=https://seu-backend.onrender.com
# API_SERVER_URL=https://seu-api-server.onrender.com

# ==============================================
# CORS
# ==============================================
# Em desenvolvimento: *
# Em produção: liste os domínios permitidos separados por vírgula
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080

# ==============================================
# BANCO DE DADOS
# ==============================================
DATABASE_PATH=./data/database.db
CACHE_DB_PATH=./data/cache.db

# ==============================================
# GOOGLE SHEETS (opcional)
# ==============================================
GOOGLE_SHEETS_API_KEY=
GOOGLE_SHEETS_ID=

# ==============================================
# WHATSAPP (opcional)
# ==============================================
WHATSAPP_API_URL=
WHATSAPP_TOKEN=

# ==============================================
# EMAIL (opcional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# ==============================================
# AMBIENTE
# ==============================================
# development, staging ou production
ENVIRONMENT=development
DEBUG=True

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE_MB=10
